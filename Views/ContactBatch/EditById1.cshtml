@using UploadExcelFile.Models
@model List<ContactVM>
@{
    ViewBag.Title = "EditFileById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Batch Details</h2>

@if (Model.Count() > 0)
{
    <hr />
    <table class="table table-bordered">
        <tr>
            <td><strong>FirstName</strong></td>
            <td><strong>LastName</strong></td>
            <td><strong>Email</strong></td>
            <td><strong>Telephone</strong></td>
            <td><strong>Mobile</strong></td>
            <td><strong>CompanyID</strong></td>
        </tr>
        @foreach (ContactVM contact in Model)
        {
            <tr>
                <td>@contact.FirstName</td>
                <td>@contact.LastName</td>
                <td>@contact.Email</td>
                <td>@contact.Telephone</td>
                <td>@contact.Mobile</td>
                <td>@contact.CompanyID</td>
            </tr>
        }
    </table>
}

<h2>Edit Batch</h2>

<form asp-controller="ContactBacth" asp-action="EditById" method="Post" enctype="multipart/form-data">
    <input class="form-control" type="file" name="postedFile" />
    <hr />
    @*<input type="submit" value="Validate" class="btn btn-primary" />*@
</form>
<br />
@{int batchId = 0;

    foreach (ContactVM contactBatch in Model)
    {
        batchId = contactBatch.BatchId;
    }

    <button class="btn btn-default">
        <span style="color:white">@Html.ActionLink("Validate", "EditById", "ContactBatch", new { id = batchId }, null)</span>
    </button>
}
<br />
<br />
<button class="btn btn-default">
    <span style="color:white">@Html.ActionLink("Back To Batches", "Index", "ContactBatch")</span>
</button>